<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.yangsijun528.coloredbracketguides</id>
    <name>Colored Bracket Guides</name>
    <vendor>yangsijun528</vendor>

    <description><![CDATA[
        Renders colored vertical and horizontal bracket guide lines in the editor based on nesting depth.
        Highlights the active scope at the cursor position for improved code structure readability.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Highlighting pass for rendering guide lines -->
        <highlightingPassFactory
                implementation="com.github.yangsijun528.coloredbracketguides.renderer.GuideLineHighlightingPassFactory"/>

        <!-- Plugin settings persistence -->
        <applicationService
                serviceImplementation="com.github.yangsijun528.coloredbracketguides.settings.PluginSettings"/>

        <!-- Settings UI under Settings > Other Settings -->
        <applicationConfigurable
                parentId="other"
                instance="com.github.yangsijun528.coloredbracketguides.settings.PluginConfigurable"
                id="com.github.yangsijun528.coloredbracketguides.settings.PluginConfigurable"
                displayName="Colored Bracket Guides"/>

        <!-- Color Scheme integration under Settings > Editor > Color Scheme -->
        <colorSettingsPage
                implementation="com.github.yangsijun528.coloredbracketguides.settings.ColorSchemeExtension"/>
    </extensions>
</idea-plugin>
